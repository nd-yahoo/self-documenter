{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2020", "dom"],
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": [
    "src/**/*",
    "code.ts",
    "search_screenshot.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
